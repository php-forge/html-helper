{
    "name": "php-forge/html-helper",
    "type": "library",
    "description": "Awesome HTML Helpers Code Generator for PHP.",
    "keywords": [
        "php-forge",
        "html-helpers",
        "code-generator",
        "php"
    ],
    "license": "mit",
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "php-forge/html-interop": "^0.2",
        "voku/anti-xss": "^4.1"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.7",
        "php-forge/support": "^0.1",
        "phpunit/phpunit": "^10.5",
        "roave/infection-static-analysis-plugin": "^1.34",
        "symplify/easy-coding-standard": "^12.1",
        "vimeo/psalm": "^5.19"
    },
    "autoload": {
        "psr-4": {
            "PHPForge\\Html\\Helper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPForge\\Html\\Helper\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.2-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "easy-coding-standard": "ecs check",
        "mutation": [
            "Composer\\Config::disableProcessTimeout",
            "roave-infection-static-analysis-plugin"
        ],
        "psalm": "psalm",
        "test": "phpunit"
    }
}
